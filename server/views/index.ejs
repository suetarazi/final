<html>

<head>
  <title>Star Wars People</title>
  <link rel="stylesheet" href="/css/reset.css" />
  <!-- <link rel="stylesheet" href="/css/style.css" /> -->
  <link rel="stylesheet" href="/css/base.css" />
  <link rel="stylesheet" href="/css/layout.css" />
  <link rel="stylesheet" href="/css/modules.css" />
  <link href="https://fonts.googleapis.com/css?family=Press+Start+2P&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Codystar&display=swap" rel="stylesheet">

<!-- handlebars entry-template -->
<script id="entry-template" type="text/x-handlebars-template">
  <div data-keyword = "{{characters}}">
    <h1>{{results.name}}</h1>
    <span>{{results.height}}</span>
    <button>{{results.like}}</button>
  </div>
</script>
</head>

<body>
  <header>
    <h1>Star Wars Characters</h1>
    <p>Vote for your favorites to show what you like!</p>
  </header>
  <main>
    <section class="characters">

      <% for(let x = 0; x < results.length; x++) { %>
      <div class="character">
        <header>

          <h2><%= results[x].name %></h2>
        </header>
        <span><%= results[x].likes || 0 %></span>
        <button>Upvote</button>
      </div>
      <% } %>

    </section>
    <div id = "moreChar">
    <button >Get More Characters</button>
    </div>
    <section id="characters" class="character container">
    
    </section>
  </main>
  <footer>
    <strong>&copy; 2020 Code Fellows</strong>
  </footer>
  
  <!-- jquery -->
  <script src="https://code.jquery.com/jquery-3.2.1.js"></script>
  
  <!-- handlebars -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.2.0/handlebars.min.js"></script>
    
  <script src="/js/app.js"></script>
  
</body>

</html>
